        .logo{width:40px;height:40px;border-radius:8px;background:linear-gradient(135deg,var(--accent),var(--accent-2));display:flex;align-items:center;justify-content:center;font-weight:700}
        .controls{display:flex;gap:8px;align-items:center}
        input[type=text]{background:var(--card);border:1px solid #122032;padding:8px;border-radius:8px;color:inherit}
